<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group6.travlhoe">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity_flugzeug"
            android:label="@string/title_flugzeug" />
        <activity
            android:name=".activity_taxi"
            android:label="@string/title_taxi" />
        <activity
            android:name=".activity_zug"
            android:label="@string/title_zug" />

        <activity
            android:name=".activity_transport"
            android:launchMode="singleTop"
            android:label="@string/title_transport"/>
        <activity
            android:name=".activity_allgemein"
            android:launchMode="singleTop"
            android:label="@string/title_allgemein"/>
        <activity
            android:name=".activity_rechnung"
            android:launchMode="singleTop"
            android:label="@string/title_rechnung"/>
        <activity
            android:name=".activity_unterkunft"
            android:launchMode="singleTop"
            android:label="@string/title_unterkunft"/>
        <activity
            android:name=".activity_auto"
            android:label="@string/title_auto" >
        </activity>
        <activity
            android:name=".function_gps">
        </activity>
    </application>

</manifest>


