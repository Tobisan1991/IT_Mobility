<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund">

<LinearLayout
android:orientation="horizontal"
android:layout_width="368dp"
android:layout_height="wrap_content"
tools:layout_editor_absoluteY="0dp"
tools:layout_editor_absoluteX="0dp"
android:id="@+id/linearLayout" />

    <Button
        android:id="@+id/Transport"
        android:layout_width="136dp"
        android:layout_height="145dp"
        android:layout_above="@+id/Unterkunft"
        android:layout_alignLeft="@+id/Rechnung"
        android:layout_alignStart="@+id/Rechnung"
        android:alpha="1"
        android:background="@mipmap/transport_ic"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="183dp" />

    <LinearLayout

android:gravity="center"
android:orientation="vertical"
android:layout_weight="1"
android:layout_width="0dp"
android:layout_height="wrap_content"
tools:layout_editor_absoluteY="0dp"
tools:layout_editor_absoluteX="0dp"
    android:id="@+id/linearLayout2">


</LinearLayout>

<TextView
android:layout_width="173dp"
android:layout_height="92dp"
android:background="@mipmap/text_ic"
android:textColor="@android:color/background_light"
android:textSize="24sp"
tools:layout_editor_absoluteX="111dp"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    android:id="@+id/textView"
    android:layout_below="@+id/linearLayout"
    android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Allgemein"
        android:layout_width="136dp"
        android:layout_height="145dp"
        android:alpha="0.7"
        android:background="@mipmap/allgemein_ic"
        android:onClick="onClick"
        android:visibility="visible"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="183dp"
        android:layout_above="@+id/Unterkunft"
        android:layout_toStartOf="@+id/Rechnung" /><![CDATA[

    >

    ]]>

    <Button
        android:id="@+id/Unterkunft"
        android:layout_width="136dp"
        android:layout_height="145dp"
        android:alpha="0.7"
        android:background="@mipmap/unterkunft_ic"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="323dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Allgemein"
        android:layout_alignStart="@+id/Allgemein"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/Rechnung"
        android:layout_width="136dp"
        android:layout_height="145dp"
        android:background="@mipmap/rechnung_ic"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="323dp"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_below="@+id/Transport"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />


</RelativeLayout>