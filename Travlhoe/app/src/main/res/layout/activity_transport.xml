<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybuttontransportpage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="0.85"
            android:paddingBottom="50sp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="2.69"
            android:paddingLeft="52dp"
            android:paddingRight="35dp"
            android:weightSum="0">


            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/Auto"
                    android:text="Auto"
                    android:textColor="#85c433"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="0.8"
                    android:alpha="0.75"
                    android:background="@drawable/mybuttontransport"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </LinearLayout>

                <Button
                    android:id="@+id/Taxi"
                    android:text="Taxi"
                    android:textColor="#85c433"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0.75"
                    android:background="@drawable/mybuttontransport"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="vertical"
                android:weightSum="1">


                <Button
                    android:id="@+id/Flugzeug"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0.75"
                    android:background="@drawable/mybuttontransport"
                    android:text="Flugzeug"
                    android:textColor="#85c433"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </LinearLayout>

                <Button
                    android:id="@+id/Bahn"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="0.8"
                    android:alpha="0.75"
                    android:background="@drawable/mybuttontransport"
                    android:text="Bahn"
                    android:textColor="#85c433"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="0.5" >

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:background="@drawable/shadow" />


            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemBackground="@color/colorWhite"
                design:menu="@menu/navigation" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>