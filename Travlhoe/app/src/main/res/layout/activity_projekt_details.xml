<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hier kommen die Projektdetails hin"
        android:textAppearance="@style/TextLabel" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButtonCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:layout_above="@+id/floatingButtonGPS"
        app:pressedTranslationZ="12dp"
        android:contextClickable="true"
        android:onClick="onButtonClicked"
        app:backgroundTint="@color/colorSecondary"
        android:src="@mipmap/ic_download"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButtonGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:layout_above="@+id/floatingButton"
        app:pressedTranslationZ="12dp"
        android:contextClickable="true"
        android:onClick="onButtonClicked"
        app:backgroundTint="@color/colorSecondary"
        android:src="@mipmap/ic_mail"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="25dp"
        app:pressedTranslationZ="12dp"
        android:contextClickable="true"
        android:onClick="fabClicked"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_floating_plus"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/floatingButtonGPS"
        android:layout_alignStart="@+id/floatingButtonGPS" />
</RelativeLayout>