<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/txtProjektWahl"
        android:layout_width="wrap_content"
        android:text="Projekt auswÃ¤hlen"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/ChooseProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_below="@+id/txtProjektWahl"
        android:layout_marginBottom="15dp"/>



    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:text="Preis"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChooseProject"/>

    <EditText
        android:id="@+id/Preis"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPrice"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/txtMwst"
        android:layout_width="wrap_content"
        android:text="Mehrwertsteuer"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Preis"/>

    <EditText
        android:id="@+id/MwSt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMwst"
        android:layout_marginBottom="15dp"
        />


    <TextView
        android:id="@+id/txtEntfernung"
        android:layout_width="wrap_content"
        android:text="Ermitteln Sie Ihre Entfernung:"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MwSt"/>


    <EditText
        android:id="@+id/Entfernung"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEntfernung"
        android:layout_marginBottom="15dp"/>

    <ImageButton
        android:id="@+id/goToGPS"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Entfernung"
        android:layout_below="@+id/txtEntfernung"
        android:layout_toRightOf="@+id/Entfernung"
        android:background="@color/colorWhite"
        android:fadingEdge="none|horizontal"
        android:onClick="onButtonClicked"
        design:srcCompat="@android:drawable/ic_menu_mylocation" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hinterlegen Sie hier Ihre Rechnung mit der Kamerfunktion:"
        android:padding="5dp"
        android:layout_below="@+id/Entfernung"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView2" />

    <ImageButton
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorWhite"
        android:onClick="onButtonClicked"
        android:padding="5dp"
        design:srcCompat="@android:drawable/ic_menu_camera" />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speichern_button"
        android:id="@+id/btn_save"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/FrameBottomBar">

    </Button>


    <FrameLayout
        android:id="@+id/FrameBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="top"
            android:background="@drawable/shadow" />

        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            design:menu="@menu/navigation"></com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        design:srcCompat="@color/colorPrimary"
        android:layout_above="@+id/txtMwst"
        android:layout_toRightOf="@+id/btnCamera"
        android:layout_toEndOf="@+id/btnCamera" />

    <ImageButton
        android:id="@+id/btnGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnCamera"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/btnCamera"
        android:layout_toRightOf="@+id/btnCamera"
        android:background="@color/colorWhite"
        android:onClick="onButtonClicked"
        design:srcCompat="@mipmap/gallerybtn" />


</RelativeLayout>